#include <iostream>
using namespace std;

int main(){

	int height, width;
	char asterisk = '*';
	
	cout << "Enter width: ";
	cin >> width;
	
	cout << "Enter height: ";
	cin >> height;
	
	cout << endl;
	
	cout << "Shape:" << endl;
	
	for(int row = 0; row < height; row++){
		for(int col = 0; col < width; col++){
			
			//even
			if(row %2 == 0){
				if (col %2 == 0){
					cout << asterisk;
				
				}
				
				else{
					cout << " ";
				
				}
			}
		
		  //odd
		  
		  else{
				if (col %2 == 1){
					cout << asterisk;
				}
				else{
					cout << " ";
				
				}
					  
			}
		
	}
	cout << endl;
	}
}
