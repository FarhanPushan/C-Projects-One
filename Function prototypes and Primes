#include <iostream>
using namespace std; 

bool isPrime(int n);

bool isDivisibleBy(int n, int d)

{

if (d == 0)

	{return false;}

		

	if ( n % d == 0)

	{

		return true;

	} 

	else

	{

		return false;

	}

	

}

bool isPrime(int n)  

{

if (n <=1)

	{return false;}	

	

	for (int i = 2; i < n ; i++)

	{

		if ( n % i == 0 )

		{

			return false;

		}

		

		

	}

	

	

	return true;

		

}

int main()

{
	
	int firstnum, secnum;	

		

	cout << "Enter integer:" << endl;

	

	cin >> firstnum;

	

	cout << "Enter integer:" << endl;

	

	cin >> secnum;

	

	int input = isDivisibleBy(firstnum , secnum);

	

	cout << endl;


	if(input == 1)


	{

		cout << "Yes" << endl;

	}

	

	else

	{

		cout << "No" << endl;

	}

	

	

	int primeTest = isPrime(firstnum);

	

	cout << primeTest << endl;

}	
